@model ABCRetailers.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container mt-5 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-gradient-primary text-white rounded-top">
            <h4 class="mb-0">Edit Order - @Model.OrderId</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="RowKey" />
                <input type="hidden" asp-for="PartitionKey" />
                <input type="hidden" asp-for="ETag" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3 position-relative">
                    <label asp-for="Status" class="form-label fw-bold text-dark"></label>
                    <select asp-for="Status" class="form-select border-0 border-bottom hover-underline">
                        <option value="Submitted">Submitted</option>
                        <option value="Processing">Processing</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="Quantity" class="form-label fw-bold text-dark"></label>
                    <input asp-for="Quantity" class="form-control border-0 border-bottom hover-underline" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="OrderDate" class="form-label fw-bold text-dark"></label>
                    <input asp-for="OrderDate" class="form-control border-0 border-bottom hover-underline" type="date" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2 transition-all animate__animated animate__pulse animate__infinite infinite">Cancel</a>
                    <button type="submit" class="btn btn-primary transition-all animate__animated animate__pulse animate__infinite infinite">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}