@model IEnumerable<ABCRetailers.Models.Order>

<h2>Orders (Admin View)</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerId</td>
                <td>@order.ProductId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td><strong>@order.Status</strong></td>
                <td>
                    @if (order.Status == "Placed")
                    {
                        <form asp-action="Process" method="post">
                            <input type="hidden" name="id" value="@order.Id" />
                            <button type="submit" class="btn btn-success">Process Order</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">Processed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>