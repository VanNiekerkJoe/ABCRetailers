@model Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb glass-card text-white px-3 py-2">
            <li class="breadcrumb-item"><a href="/Home" class="text-white text-decoration-none">Home</a></li>
            <li class="breadcrumb-item"><a href="/Order" class="text-white text-decoration-none">Orders</a></li>
            <li class="breadcrumb-item active text-white" aria-current="page">Order Details</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Order Information -->
        <div class="col-lg-8">
            <div class="glass-card p-4 mb-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h2 class="h4 text-white mb-1">Order #@Model.Id</h2>
                        <p class="text-white opacity-75 mb-0">Placed on @Model.OrderedAt.ToString("MMMM dd, yyyy 'at' HH:mm")</p>
                    </div>
                    <span class="badge @GetStatusBadgeClass(Model.OrderStatus) px-3 py-2 fs-6">
                        <i class="@GetStatusIcon(Model.OrderStatus) me-1"></i>@Model.OrderStatus
                    </span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-white mb-3">Customer Information</h5>
                        <div class="text-white opacity-75">
                            <p class="mb-1"><strong>Name:</strong> @Model.Customer?.FirstName @Model.Customer?.LastName</p>
                            <p class="mb-1"><strong>Customer ID:</strong> @Model.CustomerId</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-white mb-3">Shipping Address</h5>
                        <div class="text-white opacity-75">
                            <p class="mb-0">@Model.ShippingAddress</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Information -->
            <div class="glass-card p-4">
                <h5 class="text-white mb-3">Order Items</h5>
                @foreach (var orderItem in Model.OrderItems)
                {
                    <div class="d-flex align-items-center mb-4">
                        @if (!string.IsNullOrEmpty(orderItem.Product?.MainImageUrl))
                        {
                            <img src="@orderItem.Product.MainImageUrl" class="rounded me-4"
                                 style="width: 80px; height: 80px; object-fit: cover;"
                                 alt="@orderItem.ProductName">
                        }
                        else
                        {
                            <div class="bg-light rounded d-flex align-items-center justify-content-center me-4"
                                 style="width: 80px; height: 80px;">
                                <i class="fas fa-box fa-2x text-muted"></i>
                            </div>
                        }
                        <div class="flex-grow-1">
                            <h6 class="text-white mb-1">@orderItem.ProductName</h6>
                            <p class="text-white opacity-75 mb-2">SKU: @orderItem.ProductSku</p>
                            <div class="d-flex justify-content-between">
                                <span class="text-white">Quantity: <strong>@orderItem.Quantity</strong></span>
                                <span class="text-white">Unit Price: <strong>R @orderItem.UnitPrice</strong></span>
                                <span class="text-white">Total: <strong>R @orderItem.TotalPrice</strong></span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Order Summary & Actions -->
        <div class="col-lg-4">
            <div class="glass-card p-4 text-white mb-4">
                <h5 class="mb-4">Order Summary</h5>

                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal:</span>
                    <span>R @Model.Subtotal</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Shipping:</span>
                    <span>R @Model.ShippingAmount</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Tax:</span>
                    <span>R @Model.TaxAmount</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Discount:</span>
                    <span>-R @Model.DiscountAmount</span>
                </div>
                <hr class="my-3">
                <div class="d-flex justify-content-between mb-4">
                    <strong>Total:</strong>
                    <strong class="text-warning">R @Model.TotalAmount</strong>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="glass-card p-4 text-white">
                <h5 class="mb-3">Quick Actions</h5>
                <div class="d-grid gap-2">
                    @if (Model.OrderStatus == "Pending")
                    {
                        <form method="post" action="@Url.Action("ProcessOrder")">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <button type="submit" class="btn btn-success w-100 mb-2">
                                <i class="fas fa-cog me-2"></i>Process Order
                            </button>
                        </form>
                    }

                    <div class="dropdown">
                        <button class="btn btn-info w-100 dropdown-toggle mb-2" type="button"
                                data-bs-toggle="dropdown">
                            <i class="fas fa-edit me-2"></i>Change Status
                        </button>
                        <ul class="dropdown-menu w-100">
                            <li>
                                <form method="post" action="@Url.Action("UpdateOrderStatus")">
                                    <input type="hidden" name="orderId" value="@Model.Id" />
                                    <input type="hidden" name="status" value="Processing" />
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-cog text-warning me-2"></i>Mark as Processing
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form method="post" action="@Url.Action("UpdateOrderStatus")">
                                    <input type="hidden" name="orderId" value="@Model.Id" />
                                    <input type="hidden" name="status" value="Shipped" />
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-shipping-fast text-info me-2"></i>Mark as Shipped
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form method="post" action="@Url.Action("UpdateOrderStatus")">
                                    <input type="hidden" name="orderId" value="@Model.Id" />
                                    <input type="hidden" name="status" value="Delivered" />
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-check-circle text-success me-2"></i>Mark as Delivered
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>

                    @if (Model.OrderStatus != "Cancelled")
                    {
                        <form method="post" action="@Url.Action("CancelOrder")"
                              onsubmit="return confirm('Are you sure you want to cancel this order?');">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger w-100 mb-2">
                                <i class="fas fa-times me-2"></i>Cancel Order
                            </button>
                        </form>
                    }

                    <form method="post" action="@Url.Action("DeleteOrder")"
                          onsubmit="return confirm('Are you sure you want to delete this order? This action cannot be undone.');">
                        <input type="hidden" name="orderId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-trash me-2"></i>Delete Order
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "badge-placed",
            "Processing" => "badge-processed",
            "Shipped" => "bg-info",
            "Delivered" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusIcon(string status)
    {
        return status switch
        {
            "Pending" => "fas fa-clock",
            "Processing" => "fas fa-cog",
            "Shipped" => "fas fa-shipping-fast",
            "Delivered" => "fas fa-check-circle",
            "Cancelled" => "fas fa-times-circle",
            _ => "fas fa-question"
        };
    }
}