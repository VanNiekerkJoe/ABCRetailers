@model ABCRetailers.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-gradient-primary text-white rounded-top">
            <h4 class="mb-0">Order Details - @Model.OrderId</h4>
        </div>
        <div class="card-body">
            <dl class="row text-dark">
                <dt class="col-sm-3 fw-bold">Customer</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3 fw-bold">Product</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>

                <dt class="col-sm-3 fw-bold">Date</dt>
                <dd class="col-sm-9">@Model.OrderDate.ToShortDateString()</dd>

                <dt class="col-sm-3 fw-bold">Quantity</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3 fw-bold">Unit Price</dt>
                <dd class="col-sm-9">@Model.UnitPrice.ToString("C")</dd>

                <dt class="col-sm-3 fw-bold text-primary">Total</dt>
                <dd class="col-sm-9 fw-bold text-primary">@Model.TotalPrice.ToString("C")</dd>

                <dt class="col-sm-3 fw-bold">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-primary me-2 transition-all animate__animated animate__pulse animate__infinite infinite">Edit</a>
                <a asp-action="Index" class="btn btn-outline-secondary transition-all animate__animated animate__pulse animate__infinite infinite">Back to List</a>
            </div>
        </div>
    </div>
</div>