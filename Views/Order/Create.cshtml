@model ABCRetailers.Models.ViewModels.OrderCreateViewModel

@{
    ViewData["Title"] = "Create Order";
}

<div class="container mt-5 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-gradient-primary text-white rounded-top">
            <h4 class="mb-0">Create New Order</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3 position-relative">
                    <label asp-for="CustomerId" class="form-label fw-bold text-dark"></label>
                    <select asp-for="CustomerId" class="form-select border-0 border-bottom hover-underline" asp-items="@(new SelectList(Model.Customers, "RowKey", "Username"))">
                        <option value="">Select Customer</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="ProductId" class="form-label fw-bold text-dark"></label>
                    <select asp-for="ProductId" class="form-select border-0 border-bottom hover-underline" asp-items="@(new SelectList(Model.Products, "RowKey", "ProductName"))">
                        <option value="">Select Product</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="Quantity" class="form-label fw-bold text-dark"></label>
                    <input asp-for="Quantity" class="form-control border-0 border-bottom hover-underline" type="number" min="1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="OrderDate" class="form-label fw-bold text-dark"></label>
                    <input asp-for="OrderDate" class="form-control border-0 border-bottom hover-underline" type="date" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2 transition-all animate__animated animate__pulse animate__infinite infinite">Cancel</a>
                    <button type="submit" class="btn btn-primary transition-all animate__animated animate__pulse animate__infinite infinite">Create Order</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Add JS for dynamic price update if needed
    </script>
}