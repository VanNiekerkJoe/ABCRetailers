@model List<Product>

@{
    ViewData["Title"] = "Featured Products";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 text-white mb-1">Featured Products</h1>
            <p class="text-white opacity-75">Discover our handpicked selection of premium products</p>
        </div>
        <div class="d-flex gap-2">
            <span class="badge bg-warning text-dark fs-6">
                <i class="fas fa-star me-1"></i>@Model.Count Featured
            </span>
            <a href="@Url.Action("Index")" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i>All Products
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card product-card glass-card border-0">
                        <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="text-decoration-none">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(product.MainImageUrl))
                                {
                                    <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name"
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                         style="height: 200px;">
                                        <i class="fas fa-box-open fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                        @(product.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                    </span>
                                </div>
                                @if (product.IsFeatured)
                                {
                                    <div class="position-absolute top-0 start-0 m-3">
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-star me-1"></i>Featured
                                        </span>
                                    </div>
                                }
                            </div>
                        </a>

                        <div class="card-body text-white">
                            <h5 class="card-title fw-bold">
                                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="text-white text-decoration-none">
                                    @product.Name
                                </a>
                            </h5>
                            <p class="card-text opacity-75 small">
                                @{
                                    var description = product.Description ?? "";
                                    var truncatedDescription = description.Length > 100 ? string.Concat(description.AsSpan(0, 100), "...") : description;
                                }
                                @truncatedDescription
                            </p>

                            @if (product.AverageRating > 0)
                            {
                                <div class="mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= product.AverageRating ? "text-warning" : "text-secondary")"></i>
                                    }
                                    <small class="opacity-75 ms-1">(@product.ReviewCount)</small>
                                </div>
                            }

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    <h4 class="text-warning mb-0">R @product.Price</h4>
                                    <small class="opacity-75">@product.Category?.Name</small>
                                </div>
                                @if (!isAdmin && product.StockQuantity > 0)
                                {
                                    <form method="post" action="@Url.Action("AddToCart", "Cart")" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-customer btn-sm">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="glass-card p-5 text-white">
                <i class="fas fa-star fa-4x mb-3 opacity-50"></i>
                <h3 class="text-white">No Featured Products</h3>
                <p class="opacity-75 mb-4">Check back later for featured products.</p>
                <a href="@Url.Action("Index")" class="btn btn-customer">
                    <i class="fas fa-shopping-bag me-2"></i>Browse All Products
                </a>
            </div>
        </div>
    }
</div>