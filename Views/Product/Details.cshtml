@model Product

@{
    ViewData["Title"] = "Product Details";
    var relatedProducts = ViewBag.RelatedProducts as List<Product> ?? new List<Product>();
    var featuredProducts = ViewBag.FeaturedProducts as List<Product> ?? new List<Product>();
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb glass-card text-white px-3 py-2">
            <li class="breadcrumb-item"><a href="/Home" class="text-white text-decoration-none">Home</a></li>
            <li class="breadcrumb-item"><a href="/Product" class="text-white text-decoration-none">Products</a></li>
            <li class="breadcrumb-item active text-white" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 mb-4">
            <div class="glass-card p-4 text-center">
                @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                {
                    <img src="@Model.MainImageUrl" class="img-fluid rounded-3" alt="@Model.Name"
                         style="max-height: 400px; object-fit: contain;">
                }
                else
                {
                    <div class="bg-light rounded-3 d-flex align-items-center justify-content-center"
                         style="height: 400px;">
                        <i class="fas fa-box-open fa-5x text-muted"></i>
                    </div>
                }

                @if (isAdmin)
                {
                    <div class="mt-3">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-info btn-sm me-2">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <form method="post" action="@Url.Action("Delete", new { id = Model.Id })"
                              onsubmit="return confirm('Are you sure you want to delete this product?');"
                              class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash me-1"></i>Delete
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-md-6 mb-4">
            <div class="glass-card p-4 text-white">
                <h1 class="h2 fw-bold mb-3">@Model.Name</h1>

                <div class="d-flex align-items-center mb-3">
                    <span class="badge bg-info me-2">@Model.Category?.Name</span>
                    <span class="badge bg-secondary me-2">@Model.Brand</span>
                    @if (Model.IsFeatured)
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-star me-1"></i>Featured
                        </span>
                    }
                </div>

                <!-- Rating -->
                @if (Model.AverageRating > 0)
                {
                    <div class="mb-3">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="fas fa-star @(i <= Model.AverageRating ? "text-warning" : "text-secondary") fa-lg"></i>
                        }
                        <span class="ms-2 opacity-75">(@Model.ReviewCount reviews)</span>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <small class="opacity-75">No reviews yet</small>
                    </div>
                }

                <p class="opacity-75 mb-4">@Model.Description</p>

                <div class="mb-4">
                    <h2 class="text-warning fw-bold">R @Model.Price</h2>
                    <div class="d-flex align-items-center">
                        @if (Model.StockQuantity > 0)
                        {
                            <span class="badge bg-success me-2">
                                <i class="fas fa-check me-1"></i>In Stock
                            </span>
                            <small class="opacity-75">@Model.StockQuantity units available</small>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-times me-1"></i>Out of Stock
                            </span>
                        }
                    </div>
                </div>

                <!-- Product Specifications -->
                <div class="mb-4">
                    <h5 class="mb-3">Product Specifications</h5>
                    <div class="row">
                        <div class="col-6">
                            <small class="opacity-75">SKU:</small>
                            <p class="mb-2">@(string.IsNullOrEmpty(Model.SKU) ? "N/A" : Model.SKU)</p>
                        </div>
                        <div class="col-6">
                            <small class="opacity-75">Weight:</small>
                            <p class="mb-2">@Model.Weight kg</p>
                        </div>
                        <div class="col-6">
                            <small class="opacity-75">Dimensions:</small>
                            <p class="mb-2">@Model.Dimensions</p>
                        </div>
                        <div class="col-6">
                            <small class="opacity-75">Date Added:</small>
                            <p class="mb-2">@Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>

                @if (!isAdmin && Model.StockQuantity > 0)
                {
                    <form method="post" action="@Url.Action("AddToCart", "Cart")" class="mb-4">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label for="quantity" class="col-form-label">Quantity:</label>
                            </div>
                            <div class="col-auto">
                                <select class="form-select" name="quantity" id="quantity">
                                    @for (int i = 1; i <= Math.Min(Model.StockQuantity, 10); i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-customer px-4 add-to-cart-btn">
                                    <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                </button>
                            </div>
                        </div>
                    </form>
                }

                <div class="product-features">
                    <h5 class="mb-3">Features & Benefits</h5>
                    <ul class="list-unstyled opacity-75">
                        <li><i class="fas fa-check text-success me-2"></i>Free shipping on all orders</li>
                        <li><i class="fas fa-check text-success me-2"></i>30-day money-back guarantee</li>
                        <li><i class="fas fa-check text-success me-2"></i>24/7 customer support</li>
                        <li><i class="fas fa-check text-success me-2"></i>Secure payment processing</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (relatedProducts.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="text-white mb-4">Related Products</h3>
                <div class="row g-4">
                    @foreach (var product in relatedProducts)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card product-card glass-card border-0">
                                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="text-decoration-none">
                                    <div class="position-relative">
                                        @if (!string.IsNullOrEmpty(product.MainImageUrl))
                                        {
                                            <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name"
                                                 style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                 style="height: 200px;">
                                                <i class="fas fa-box-open fa-3x text-muted"></i>
                                            </div>
                                        }
                                        <div class="position-absolute top-0 end-0 m-3">
                                            <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                                @(product.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                            </span>
                                        </div>
                                        @if (product.IsFeatured)
                                        {
                                            <div class="position-absolute top-0 start-0 m-3">
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-star me-1"></i>Featured
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </a>

                                <div class="card-body text-white">
                                    <h5 class="card-title fw-bold">
                                        <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="text-white text-decoration-none">
                                            @product.Name
                                        </a>
                                    </h5>
                                    <p class="card-text opacity-75 small">
                                        @{
                                            var desc = product.Description ?? "";
                                            var truncDesc = desc.Length > 100 ? string.Concat(desc.AsSpan(0, 100), "...") : desc;
                                        }
                                        @truncDesc
                                    </p>

                                    @if (product.AverageRating > 0)
                                    {
                                        <div class="mb-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star @(i <= product.AverageRating ? "text-warning" : "text-secondary")"></i>
                                            }
                                            <small class="opacity-75 ms-1">(@product.ReviewCount)</small>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div>
                                            <h4 class="text-warning mb-0">R @product.Price</h4>
                                            <small class="opacity-75">@product.Category?.Name</small>
                                        </div>
                                        @if (!isAdmin && product.StockQuantity > 0)
                                        {
                                            <form method="post" action="@Url.Action("AddToCart", "Cart")" class="d-inline">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-customer btn-sm">
                                                    <i class="fas fa-cart-plus"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Featured Products -->
    @if (featuredProducts.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="text-white mb-4">Featured Products</h3>
                <div class="row g-4">
                    @foreach (var product in featuredProducts)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card product-card glass-card border-0">
                                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="text-decoration-none">
                                    <div class="position-relative">
                                        @if (!string.IsNullOrEmpty(product.MainImageUrl))
                                        {
                                            <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name"
                                                 style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                 style="height: 200px;">
                                                <i class="fas fa-box-open fa-3x text-muted"></i>
                                            </div>
                                        }
                                        <div class="position-absolute top-0 end-0 m-3">
                                            <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                                @(product.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                            </span>
                                        </div>
                                        @if (product.IsFeatured)
                                        {
                                            <div class="position-absolute top-0 start-0 m-3">
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-star me-1"></i>Featured
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </a>

                                <div class="card-body text-white">
                                    <h5 class="card-title fw-bold">
                                        <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="text-white text-decoration-none">
                                            @product.Name
                                        </a>
                                    </h5>
                                    <p class="card-text opacity-75 small">
                                        @{
                                            var desc = product.Description ?? "";
                                            var truncDesc = desc.Length > 100 ? string.Concat(desc.AsSpan(0, 100), "...") : desc;
                                        }
                                        @truncDesc
                                    </p>

                                    @if (product.AverageRating > 0)
                                    {
                                        <div class="mb-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star @(i <= product.AverageRating ? "text-warning" : "text-secondary")"></i>
                                            }
                                            <small class="opacity-75 ms-1">(@product.ReviewCount)</small>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div>
                                            <h4 class="text-warning mb-0">R @product.Price</h4>
                                            <small class="opacity-75">@product.Category?.Name</small>
                                        </div>
                                        @if (!isAdmin && product.StockQuantity > 0)
                                        {
                                            <form method="post" action="@Url.Action("AddToCart", "Cart")" class="d-inline">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-customer btn-sm">
                                                    <i class="fas fa-cart-plus"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add to cart animation
            const addToCartBtn = document.querySelector('.add-to-cart-btn');
            if (addToCartBtn) {
                addToCartBtn.addEventListener('click', function(e) {
                    const originalText = this.innerHTML;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Adding...';
                    this.disabled = true;

                    setTimeout(() => {
                        this.innerHTML = originalText;
                        this.disabled = false;
                    }, 2000);
                });
            }
        });
    </script>
}