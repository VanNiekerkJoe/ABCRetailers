@model ABCRetailers.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-gradient-primary text-white rounded-top">
            <h4 class="mb-0">Edit Product - @Model.ProductName</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="RowKey" />
                <input type="hidden" asp-for="PartitionKey" />
                <input type="hidden" asp-for="ETag" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3 position-relative">
                    <label asp-for="ProductName" class="form-label fw-bold text-dark"></label>
                    <input asp-for="ProductName" class="form-control border-0 border-bottom hover-underline" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="Description" class="form-label fw-bold text-dark"></label>
                    <textarea asp-for="Description" class="form-control border-0 border-bottom hover-underline" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="Price" class="form-label fw-bold text-dark"></label>
                    <input asp-for="Price" class="form-control border-0 border-bottom hover-underline" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="StockAvailable" class="form-label fw-bold text-dark"></label>
                    <input asp-for="StockAvailable" class="form-control border-0 border-bottom hover-underline" type="number" />
                    <span asp-validation-for="StockAvailable" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label class="form-label fw-bold text-dark">Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid mb-2 rounded" style="max-height: 200px;">
                    }
                    <input type="file" name="imageFile" class="form-control border-0 border-bottom hover-underline" accept="image/*" />
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2 transition-all animate__animated animate__pulse animate__infinite infinite">Cancel</a>
                    <button type="submit" class="btn btn-primary transition-all animate__animated animate__pulse animate__infinite infinite">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}