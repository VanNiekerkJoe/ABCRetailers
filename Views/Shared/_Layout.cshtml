<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retailers</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --customer-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --glass-bg: rgba(255, 255, 255, 0.1);
            --glass-border: rgba(255, 255, 255, 0.2);
        }

        body {
            background: var(--primary-gradient);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            backdrop-filter: blur(10px);
        }

        .body-customer {
            background: var(--customer-gradient);
        }

        .glass-card {
            background: var(--glass-bg);
            backdrop-filter: blur(15px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .stats-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
            }

        .navbar-glass {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        }

        .btn-glow {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-glow:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .btn-customer {
            background: linear-gradient(45deg, #4facfe, #00f2fe);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-customer:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(79, 172, 254, 0.4);
                color: white;
            }

        .table-glass {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            overflow: hidden;
        }

        .badge-processed {
            background: linear-gradient(45deg, #28a745, #20c997);
        }

        .badge-placed {
            background: linear-gradient(45deg, #ffc107, #fd7e14);
        }

        .product-card {
            transition: all 0.3s ease;
            border: none;
            overflow: hidden;
        }

            .product-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            }

        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .role-badge-admin {
            background: linear-gradient(45deg, #667eea, #764ba2);
        }

        .role-badge-customer {
            background: linear-gradient(45deg, #4facfe, #00f2fe);
        }

        .cart-badge {
            font-size: 0.7em;
            padding: 0.25em 0.5em;
        }
    </style>
</head>
<body class="d-flex flex-column h-100 @(Context.Session.GetString("Role") == "Customer" ? "body-customer" : "")">
    <nav class="navbar navbar-expand-lg navbar-light navbar-glass">
        <div class="container">
            <a class="navbar-brand fw-bold @(Context.Session.GetString("Role") == "Customer" ? "text-info" : "text-primary")" href="/Home">
                <i class="fas fa-store me-2"></i>
                @(Context.Session.GetString("Role") == "Admin" ? "AdminPanel" : "ShopNow")
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(Context.Session.GetString("Role") == "Customer" ? "text-info" : "text-primary")" href="/Home">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Session.GetString("Role") == "Customer" ? "text-info" : "text-primary")" href="/Product">
                            <i class="fas fa-box me-1"></i>Products
                        </a>
                    </li>
                    @if (Context.Session.GetString("Role") == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-primary" href="/Order">
                                <i class="fas fa-clipboard-list me-1"></i>Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" href="/Customer">
                                <i class="fas fa-users me-1"></i>Customers
                            </a>
                        </li>
                    }
                </ul>

                <div class="navbar-nav ms-auto align-items-center">
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <!-- Customer-specific navigation -->
                        @if (Context.Session.GetString("Role") == "Customer")
                        {
                            <a class="btn btn-outline-primary btn-sm me-2 position-relative" href="/Cart">
                                <i class="fas fa-shopping-cart me-1"></i>Cart
                                @{
                                    var cartCount = Context.Session.GetInt32("CartCount") ?? 0;
                                    if (cartCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge">
                                            @cartCount
                                            <span class="visually-hidden">items in cart</span>
                                        </span>
                                    }
                                }
                            </a>
                            <a class="btn btn-outline-info btn-sm me-2" href="/Cart/OrderHistory">
                                <i class="fas fa-history me-1"></i>Orders
                            </a>
                        }

                        <span class="navbar-text me-3">
                            <i class="fas fa-user-circle me-1"></i>
                            @Context.Session.GetString("Username")
                            <span class="badge @(Context.Session.GetString("Role") == "Admin" ? "role-badge-admin" : "role-badge-customer") ms-2">
                                @Context.Session.GetString("Role")
                            </span>
                        </span>

                        <!-- Updated logout link -->
                        <a class="btn btn-outline-danger btn-sm" href="/Login/Logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Switch Account
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-glow btn-sm" href="/Login">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-shrink-0 py-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>