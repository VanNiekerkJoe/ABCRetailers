@model User

@{
    ViewData["Title"] = "Login";
}

<div class="login-container animate__animated animate__fadeIn">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="glass-card p-5 text-white">
                    <div class="text-center mb-4">
                        <i class="fas fa-store fa-3x mb-3 text-white"></i>
                        <h1 class="h3 fw-bold">Welcome Back</h1>
                        <p class="opacity-75">Sign in to access your account</p>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger animate__animated animate__shakeX" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success animate__animated animate__bounceIn" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-user text-primary"></i></span>
                                <input type="text" class="form-control" id="username" name="Username" required
                                       placeholder="Enter your username">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-lock text-primary"></i></span>
                                <input type="password" class="form-control" id="password" name="Password" required
                                       placeholder="Enter your password">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-glow w-100 py-2 fw-semibold">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </button>

                        <div class="text-center mt-3">
                            <small class="opacity-75">
                                Demo Accounts:<br>
                                <strong>Admin:</strong> admin / password : admin123<br>
                                <strong>Customer:</strong> customer1 / password : cust123
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>