@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-3 text-success fw-bold">LOGIN SUCCESSFUL</h1>
            <p class="lead mt-4">Welcome back, <strong class="text-primary">@ViewBag.Username</strong></p>
            <p class="fs-4">Role: <span class="badge bg-info">@ViewBag.Role</span></p>

            <hr class="my-5" />

            <div class="d-grid gap-3 col-6 mx-auto">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">
                    View All Products
                </a>

                @if (ViewBag.Role == "Admin")
                {
                    <a asp-controller="Order" asp-action="Index" class="btn btn-warning btn-lg text-white">
                        Manage Orders (Admin Only)
                    </a>
                }

                <a asp-controller="Login" asp-action="Index" class="btn btn-outline-danger btn-lg">
                    Logout
                </a>
            </div>

            <div class="mt-5 p-4 bg-light rounded">
                <p class="fs-3 text-success mb-0">Azure SQL + EF Core = 100% WORKING</p>
            </div>
        </div>
    </div>
</body>
</html>