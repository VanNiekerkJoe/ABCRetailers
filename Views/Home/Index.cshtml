@model ABCRetailers.Models.HomeViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5 animate__animated animate__fadeInUp">
    <div class="row mb-4 g-4">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 text-center bg-light-grey text-black transition-all animate__animated animate__pulse">
                <div class="card-body">
                    <h5 class="card-title">Customers</h5>
                    <h2 class="card-text">@Model.CustomerCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 text-center bg-light-grey text-black transition-all animate__animated animate__pulse">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <h2 class="card-text">@Model.ProductCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 text-center bg-light-grey text-black transition-all animate__animated animate__pulse">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <h2 class="card-text">@Model.OrderCount</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-3 mb-4 overflow-hidden">
        <div class="card-header bg-gradient-primary text-white">
            <h4 class="mb-0">Featured Products</h4>
        </div>
        <div class="card-body">
            <div class="row g-4">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-0 rounded-3 transition-all hover-underline-card animate__animated animate__fadeIn">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top rounded-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;">
                            }
                            <div class="card-body">
                                <h5 class="card-title text-black">@product.ProductName</h5>
                                <p class="card-text text-dark">@product.Description</p>
                                <p class="card-text fw-bold text-primary">@product.Price.ToString("C")</p>
                                <p class="card-text text-dark">Stock: @product.StockAvailable</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>