@model ABCRetailers.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 text-white mb-1">Shopping Cart</h1>
            <p class="text-white opacity-75">Review your items and proceed to checkout</p>
        </div>
        <div class="d-flex gap-2">
            <span class="badge bg-warning text-dark fs-6">
                <i class="fas fa-shopping-cart me-1"></i>@Model.TotalItems Items
            </span>
            <span class="badge bg-success fs-6">
                <i class="fas fa-money-bill me-1"></i>R @Model.GrandTotal
            </span>
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="glass-card p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col" class="text-center pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" class="rounded me-3"
                                                 style="width: 60px; height: 60px; object-fit: cover;"
                                                 alt="@item.ProductName">
                                        }
                                        else
                                        {
                                            <div class="rounded me-3 bg-light d-flex align-items-center justify-content-center"
                                                 style="width: 60px; height: 60px;">
                                                <i class="fas fa-box text-muted"></i>
                                            </div>
                                        }
                                        <div>
                                            <h6 class="mb-1 fw-bold">@item.ProductName</h6>
                                            <p class="text-muted mb-0 small">@item.ProductDescription.Truncate(100)</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-semibold">R @item.Price</span>
                                </td>
                                <td>
                                    <form method="post" action="@Url.Action("UpdateCart")" class="d-inline">
                                        <input type="hidden" name="cartId" value="@item.CartId" />
                                        <div class="input-group input-group-sm" style="width: 120px;">
                                            <input type="number" name="quantity" value="@item.Quantity"
                                                   min="1" max="@item.MaxQuantity" class="form-control">
                                            <button type="submit" class="btn btn-outline-primary">
                                                <i class="fas fa-sync-alt"></i>
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">R @item.TotalPrice</span>
                                </td>
                                <td class="text-center pe-4">
                                    <form method="post" action="@Url.Action("RemoveFromCart")"
                                          onsubmit="return confirm('Remove this item from cart?');"
                                          class="d-inline">
                                        <input type="hidden" name="cartId" value="@item.CartId" />
                                        <button type="submit" class="btn btn-danger btn-sm" title="Remove Item">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Cart Summary -->
            <div class="row mt-4">
                <div class="col-md-8">
                    <div class="d-flex gap-2">
                        <form method="post" action="@Url.Action("ClearCart")"
                              onsubmit="return confirm('Are you sure you want to clear your entire cart?');">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-broom me-2"></i>Clear Cart
                            </button>
                        </form>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">
                            <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="glass-card p-4 text-white">
                        <h5 class="mb-3">Order Summary</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items (@Model.TotalItems):</span>
                            <span>R @Model.GrandTotal</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>FREE</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax:</span>
                            <span>R @(Model.GrandTotal * 0.15m)</span>
                        </div>
                        <hr class="my-2">
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Total:</span>
                            <span class="text-warning">R @(Model.GrandTotal * 1.15m)</span>
                        </div>

                        <form method="post" action="@Url.Action("Checkout")" class="mt-3">
                            <button type="submit" class="btn btn-success w-100 py-2">
                                <i class="fas fa-lock me-2"></i>Proceed to Checkout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="glass-card p-5 text-white">
                <i class="fas fa-shopping-cart fa-4x mb-3 opacity-50"></i>
                <h3 class="text-white">Your Cart is Empty</h3>
                <p class="opacity-75 mb-4">Start shopping to add items to your cart</p>
                <a href="@Url.Action("Index", "Product")" class="btn btn-customer">
                    <i class="fas fa-shopping-bag me-2"></i>Browse Products
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-update quantity when changed
            const quantityInputs = document.querySelectorAll('input[name="quantity"]');
            quantityInputs.forEach(input => {
                input.addEventListener('change', function() {
                    this.closest('form').submit();
                });
            });

            // Add loading state to checkout button
            const checkoutBtn = document.querySelector('button[type="submit"]');
            if (checkoutBtn) {
                checkoutBtn.addEventListener('click', function() {
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                    this.disabled = true;
                });
            }
        });
    </script>
}