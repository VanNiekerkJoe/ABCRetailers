@model IEnumerable<ABCRetailers.Models.Customer>

@{
    ViewData["Title"] = "Customer Management";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 text-white mb-1 animate__animated animate__fadeInDown">Customer Management</h1>
            <p class="text-white opacity-75 animate__animated animate__fadeInDown animate__delay-1s">
                Manage and view all registered customers
            </p>
        </div>
        <div class="d-flex gap-2">
            <span class="badge bg-primary fs-6 animate__animated animate__bounceIn">
                <i class="fas fa-users me-1"></i>@Model.Count() Customers
            </span>
            <a href="@Url.Action("Create")" class="btn btn-glow">
                <i class="fas fa-plus me-1"></i>Add Customer
            </a>
        </div>
    </div>

    <!-- Customers Table -->
    <div class="table-glass animate__animated animate__fadeInUp">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-4">Customer ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Total Orders</th>
                        <th scope="col">Total Spent</th>
                        <th scope="col">Last Order</th>
                        <th scope="col" class="text-center pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr class="animate__animated animate__fadeIn">
                            <td class="ps-4 fw-bold">@customer.Id</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 35px; height: 35px;">
                                        <i class="fas fa-user text-white fa-sm"></i>
                                    </div>
                                    <div class="ms-2">
                                        <div class="fw-semibold">@customer.FirstName @customer.LastName</div>
                                        <small class="text-muted">User ID: @customer.UserId</small>
                                    </div>
                                </div>
                            </td>
                            <td>@customer.User?.Email</td>
                            <td>@(string.IsNullOrEmpty(customer.PhoneNumber) ? "N/A" : customer.PhoneNumber)</td>
                            <td>
                                <span class="badge bg-secondary fs-6">@customer.TotalOrders</span>
                            </td>
                            <td>
                                <span class="fw-semibold text-success">R @customer.TotalSpent</span>
                            </td>
                            <td>
                                @if (customer.LastOrderDate.HasValue)
                                {
                                    <small>@customer.LastOrderDate.Value.ToString("MMM dd, yyyy")</small>
                                }
                                else
                                {
                                    <small class="text-muted">No orders</small>
                                }
                            </td>
                            <td class="text-center pe-4">
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Details", new { id = customer.Id })" class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = customer.Id })" class="btn btn-warning btn-sm" title="Edit Customer">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="@Url.Action("Delete", new { id = customer.Id })"
                                          onsubmit="return confirm('Are you sure you want to delete this customer? This action cannot be undone.');"
                                          class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" title="Delete Customer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="glass-card p-5 text-white">
                <i class="fas fa-users fa-4x mb-3 opacity-50"></i>
                <h3 class="text-white">No Customers Found</h3>
                <p class="opacity-75 mb-4">No customers have registered yet.</p>
                <a href="@Url.Action("Create")" class="btn btn-glow">
                    <i class="fas fa-plus me-2"></i>Add First Customer
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function confirmDelete(customerId) {
            if (confirm('Are you sure you want to delete this customer? This action cannot be undone.')) {
                // Implement delete functionality
                alert('Delete functionality would be implemented here for customer ID: ' + customerId);
            }
        }
    </script>
}