@model ABCRetailers.Models.FileUploadModel

@{
    ViewData["Title"] = "Upload Proof of Payment";
}

<div class="container mt-5 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-gradient-primary text-white rounded-top">
            <h4 class="mb-0">Upload Proof of Payment</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Index" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3 position-relative">
                    <label asp-for="OrderId" class="form-label fw-bold text-dark"></label>
                    <input asp-for="OrderId" class="form-control border-0 border-bottom hover-underline" placeholder="Enter order ID" />
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="CustomerName" class="form-label fw-bold text-dark"></label>
                    <input asp-for="CustomerName" class="form-control border-0 border-bottom hover-underline" placeholder="Enter customer name" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="ProofOfPayment" class="form-label fw-bold text-dark"></label>
                    <input asp-for="ProofOfPayment" type="file" class="form-control border-0 border-bottom hover-underline" accept=".pdf,.jpg,.png" />
                    <span asp-validation-for="ProofOfPayment" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary transition-all animate__animated animate__pulse animate__infinite infinite">Upload File</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}